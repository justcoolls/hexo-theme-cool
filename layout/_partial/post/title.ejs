<% if (post.link){ %>
  <h1 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url">
      <div class="titlename"><%= post.title %></div>
    </a>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ %>
      <a class="articleIndex-title" href="<%- url_for(post.path) %>"><div class="titlename"><%= post.title %></div></a>
  <% } else { %>
    <h1 class="<%= class_name %>" itemprop="name">
      <%= post.title %>
    </h1>
  <% } %>
<% } %>